I ?= test
IN := $(BINDIR)/$(I).txt

MAKE := make --no-print-directory IN=$(IN)

# task 1
.PHONY: mnk mkn kmn nmk nkm knm baseline tasks1

mnk: $(M)
	@$(M) $(IN) 1 1 1

mkn: $(M)
	@$(M) $(IN) 1 2 1

kmn: $(M)
	@$(M) $(IN) 1 3 1

nmk: $(M)
	@$(M) $(IN) 1 4 1

nkm: $(M)
	@$(M) $(IN) 1 5 1

knm: $(M)
	@$(M) $(IN) 1 6 1

baseline: mnk

tasks1:
	@echo Task 1
	@$(MAKE) mnk
	@$(MAKE) mkn
	@$(MAKE) kmn
	@$(MAKE) nmk
	@$(MAKE) nkm
	@$(MAKE) knm

# task 2

.PHONY: t_mnk mnkkmn_b32 mnk_lu2 grade2 tasks2

t_mnk: $(M)
	@$(M) $(IN) 11 101 1

mnkkmn_b32: $(M)
	@$(M) $(IN) 1 111 1

mnk_lu2: $(M)
	@$(M) $(IN) 1 121 1

grade2: t_mnk

tasks2:
	@echo Task 2
	@$(MAKE) t_mnk
	@$(MAKE) mnkkmn_b32
	@$(MAKE) mnk_lu2

# task 3

.PHONY: simd o3 simd-o3 grade3 tasks3

simd: $(MS)
	@$(MS) $(IN) 1 201 1

o3: $(MO)
	@$(MO) $(IN) 1 1 1

simd-o3: $(MO)
	@$(MO) $(IN) 1 201 1


grade3: simd

tasks3:
	@echo Task 3
	@$(MAKE) simd
	@$(MAKE) o3
	@$(MAKE) simd-o3

# useful all-in-one target

.PHONY: tasks

tasks:
	@$(MAKE) tasks1
	@$(MAKE) tasks2
	@$(MAKE) tasks3
